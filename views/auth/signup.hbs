
<div class="mt-4 card bg-transparent position-relative">
  <img src="images/viewsImg.png" class="card-img" alt="marco">
  <div class="card-img-overlay position-absolute top-50 start-50 translate-middle ms-5 me-1">
    <div class="col">
      <div class="col-sm-6">
        <div class="card bg-transparent border-0 container-fluid">
          <div class="card-body text-center">
            <h5 class="card-title">REGISTRO-ARTISTA</h5>
             <form action="/registrarse" method="POST" enctype="multipart/form-data">
      
              <label for="input-name">Nombre de ususario:</label>
              <input type="text" id="input-name" name="name" placeholder="Nombre de usuario">
              <br/>
              <label for="input-email">Email:</label>
              <input type="email" id="input-email" name="email" placeholder="Correo Electrónico">
              <br/>
              <label for="input-password">Contraseña:</label>
              <input type="password" id="input-password" name="password" placeholder="Contraseña">
              <br/>
              <label for="input-number">Teléfono:</label>
              <input type="number" id="input-number" name="phoneNumber" placeholder="Número telefónico">
              <br/>
              <label for="input-image">Foto:</label>
              <input type="file" id="input-image" name="image" placeholder="Foto de perfil">
              <br/>
              <label for="input-service">Área(s) artística(s):</label>
              <input type="text" id="input-service" name="area" placeholder="e.j.: Teatro">
              <br/>
              <button type="submit" class="btn-primary">Crear cuenta</button>
              {{#if errorMessage}}
              <p class="error">{{errorMessage}}</p>
              {{/if}}
              </form>
            </div>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="card bg-transparent border-0  container-fluid">
            <div class="card-body text-center">
              <h5 class="card-title">REGISTRO-CLIENTE</h5>
              <form action="/registrarse-cliente" method="POST">
      
              <label for="input-name">Nombre de ususario:</label>
              <input type="text" id="input-name" name="name" placeholder="Nombre de usuario">
              <br/>
              <label for="input-email">Email:</label>
              <input type="email" id="input-email" name="email" placeholder="Correo Electrónico">
              <br/>
              <label for="input-password">Contraseña:</label>
              <input type="password" id="input-password" name="password" placeholder="Contraseña">
              <br/>
              <button type="submit" class="btn-primary">Crear cuenta</button>
    
              {{#if errorMessage}}
              <p class="error">{{errorMessage}}</p>
              {{/if}}

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>